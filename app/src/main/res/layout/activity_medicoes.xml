    <TextView
        android:id="@+id/txtEstado_Oxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="A medir ..."
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BloodPressureValues"
        />

    <Button
        android:id="@+id/btnStartReadingOxygen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:text="Read Oxygen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BloodPressureValues"/>

    <TextView
        android:id="@+id/txt_title_bar_Oxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Oxygen Saturation"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/OximeterValues"
        app:layout_constraintStart_toStartOf="@+id/txt_title_bar_Thermo"
        app:layout_constraintTop_toBottomOf="@+id/txtEstado_Oxy" />
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/OximeterValues"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEstado_Oxy">

        <TextView
            android:id="@+id/SpO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:text="SpO₂"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="%"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SpO"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/valorSpO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintBaseline_toBaselineOf="@+id/SpO"/>

        <TextView
            android:id="@+id/PR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="PR"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/SpO" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="bpm"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintBottom_toTopOf="@+id/PR" />

        <TextView
            android:id="@+id/valorPrbpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView11"
